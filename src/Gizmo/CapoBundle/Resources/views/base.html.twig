<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge">

        <title>{% block title %}capo: cacti portal{% endblock %}{% block subtitle %}{% endblock %}</title>

        {% stylesheets output='css/styles.css' filter='cssrewrite'
         '../vendor/twitter/bootstrap/css/bootstrap.min.css'
         '../vendor/ivaynberg/select2/select2.css'
         '../vendor/select2-bootstrap/select2-bootstrap.css'
         'bundles/gizmocapo/css/capo.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}">
        {% endstylesheets %}
        <link rel="stylesheet" type="text/css" media="print" href="{{ asset('bundles/gizmocapo/css/print.css') }}">
        
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <nav class="navbar navbar-default" role="navigation" id="main-navbar">
            <div class="container-fluid">
                <div class="navbar-header">

                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navigation-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href="#">
                        <span class="col-sm-1"><img alt="Capo" src="/bundles/gizmocapo/images/logo.png"></span>
                        <span class="col-sm-offset-1 col-sm-1">Capo</span>
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="navigation-collapse">
                    {% if data is defined %}
                        <ul class="nav navbar-nav">
                            {% block navitems %}
                                <li {% if data.active_page == "graphs" %}class="active"{% endif %}><a href="{{ path('gizmo_capo_homepage') }}"><span class="glyphicon glyphicon-stats"></span> graphs</a></li>
                                <li {% if data.active_page == "weathermaps" %}class="active"{% endif %}><a href="{{ path('gizmo_capo_weathermaps') }}"><span class="glyphicon glyphicon-picture"></span> weathermaps</a></li>
                                <li {% if data.active_page == "settings" %}class="active"{% endif %}><a href="{{ path('gizmo_capo_settings_index') }}"><span class="glyphicon glyphicon-wrench"></span> settings</a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-user"></span> logout</a></li>
                            {% endblock %}
                        </ul>
                    {% endif %}
                    <div class="navbar-right capo-navbar-right">
                        {% block extrabuttons %}{% endblock %}
                    </div>
                </div>
                <span id="loading-div"></span>
            </div><!-- /.container-fluid -->
        </nav> <!-- /.navbar -->

        <div class="container-fluid" id="top-container">
            {% block contents %}{% endblock %}
        </div><!-- /.container -->
        {% javascripts filter=''
         '../vendor/components/jquery/jquery.min.js'
         '../vendor/components/underscore/underscore-min.js'
         '../vendor/twitter/bootstrap/js/bootstrap.min.js'
         '../vendor/ivaynberg/select2/select2.js'
         '../vendor/spinjs/spin.min.js'
         '../vendor/jscrolljs/jquery.jscroll.min.js'
         'bundles/gizmocapo/js/capo.js'
         'bundles/gizmocapo/js/capo.html.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% block bottom %}{% endblock %}
    </body>
</html>
